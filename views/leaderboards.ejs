<%- include('overall_header'); %>

<h1>Leaderboards: <%= leaderboard_name %></h1>
<div class="btn-group">
  <div class="btn"><a href="/leaderboards/bomb-defusal"><span>Bomb Defusal</span></a></div>
  <div class="btn"><a href="/leaderboards/ffa"><span>FFA</span></a></div>
</div>
<div class="table-responsive">
  <table class="sortable">
    <thead>
      <tr>
        <th>Place</th>
        <th>Name</th>
        <th>MMR</th>
        <th>Mu</th>
        <th>Sigma</th>
        <th>Won #</th>
        <th>Lost #</th>
      </tr>
    </thead>
    <tbody>
      <% leaderboards.forEach((i, index) => { %>
        <tr>
          <td><%= index + 1 %>
            <%= index === 0 ? 'ðŸ†' : index === 1 ? 'ðŸ¥ˆ' : index === 2 ? 'ðŸ¥‰' : '' %></td>
          <td><a href="/user/<%= i.account_id %>"><img class="rank" src="/assets/images/ranks/<%= i.rankImg %>" alt="<%= i.rankName %>"><%= i.nickname %></a></td>
          <td><%= i.mmr.toFixed(2) %></td>
          <td><%= i.mu.toFixed(3) %></td>
          <td><%= i.sigma.toFixed(3) %></td>
          <td><%= i.matches_won %></td>
          <td><%= i.matches_lost %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('overall_footer'); %>
