<%- include('overall_header'); %>

<div class="mt-2 btn-group">
  <div class="btn"><a href="/arenas/<%= prev %>"><span><i class="fa-solid fa-arrow-left"></i></span><span>Previous</span></a></div>
  <div class="btn"><a href="/arenas/<%= next %>"><span>Next</span><span><i class="fa-solid fa-arrow-right"></i></span></a></div>
</div>

<h1><%= arena.name %></h1>
<div class="arena">
  <div class="details">
    <dl class="info-list">
      <div class="info-pair">
        <dt><i class="fa-solid fa-user mr"></i>Author</dt>
        <dd>Pythagoras</dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-calendar mr"></i>Updated</dt>
        <dd>2 years ago</dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-weight-hanging mr"></i>Size</dt>
        <dd>0.12 MB</dd>
      </div>
    </dl>
    <dl>
      <dt><i class="fa-solid fa-align-center mr"></i>Description</dt>
      <% const short = arena.short_description; %>
      <% const full = arena.full_description; %>
      <% if (short !== 'N/A' && full !== 'N/A') { %>
        <dd><p><%= short %></p><p><%= full %></p></dd>
      <% } else if (short !== 'N/A') { %>
        <dd><p><%= short %></p></dd>
      <% } else if (full !== 'N/A') { %>
        <dd><p><%= full %></p></dd>
      <% } else { %>
        <dd><p>N/A</p></dd>
      <% } %>
    </dl>
  </div>
  <div class="miniature"><img src="/arenas/<%= arena.name %>/miniature.png" alt="<%= arena.name %>"></div>
</div>

<script>
document.onkeydown = function(e) {
  switch(e.which) {
    case 37:
    if (4326 > 0) {
      window.location.href = "/arenas/<%= prev %>";
    }
    break;
    case 39:
    if (4328 > 0) {
      window.location.href = "/arenas/<%= next %>";
    }
    break;
    default: return;
  }
  e.preventDefault();
};
</script>

<%- include('overall_footer'); %>
