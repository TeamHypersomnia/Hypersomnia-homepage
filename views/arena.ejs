<%- include('overall_header'); %>

<h1><%= page %></h1>

<div class="btn-group">
  <div class="btn">
    <a class="arena-prev" href="/arenas/<%= prev %>">
      <span><i class="fa-solid fa-arrow-left"></i></span>
      <span><%= prev %></span>
    </a>
  </div>

  <div class="btn">
    <a class="arena-next" href="/arenas/<%= next %>">
      <span><%= next %></span>
      <span><i class="fa-solid fa-arrow-right"></i></span>
    </a>
  </div>
</div>

<div class="arena">
  <div class="details">
    <dl class="info-list">
      <div class="info-pair">
        <dt><i class="fa-solid fa-user"></i>Author</dt>
        <dd><%= arena.author %></dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-weight-hanging"></i>Size</dt>
        <dd><%= arena.size %></dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-calendar"></i>Updated</dt>
        <dd><%= arena.updated %></dd>
      </div>
    </dl>

    <dl>
      <dt><i class="fa-solid fa-align-center"></i>Description</dt>
      <% if (arena.short_description !== 'N/A' && arena.full_description !== 'N/A') { %>
        <dd><p><%= arena.short_description %></p><p><%= arena.full_description %></p></dd>
      <% } else if (arena.short_description !== 'N/A') { %>
        <dd><p><%= arena.short_description %></p></dd>
      <% } else if (arena.full_description !== 'N/A') { %>
        <dd><p><%= arena.full_description %></p></dd>
      <% } else { %>
        <dd><p>N/A</p></dd>
      <% } %>
    </dl>
  </div>

  <div class="responsive">
    <img src="/arenas/<%= arena.name %>/miniature.png?t=<%= arena.ts %>" alt="<%= arena.name %>">
  </div>
</div>

<%- include('overall_footer'); %>
