<%- include('overall_header'); %>

<h1><%= page %></h1>

<div class="btn-group">
  <div class="btn">
    <a href="/arenas/<%= prev %>">
      <span><i class="fa-solid fa-arrow-left"></i></span>
      <span><%= prev %></span>
    </a>
  </div>
  <div class="btn">
    <a href="/arenas/<%= next %>">
      <span><%= next %></span>
      <span><i class="fa-solid fa-arrow-right"></i></span>
    </a>
  </div>
</div>

<div class="arena">
  <div class="details">
    <dl class="info-list">
      <div class="info-pair">
        <dt><i class="fa-solid fa-user"></i>Author</dt>
        <dd><%= arena.author %></dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-weight-hanging"></i>Size</dt>
        <dd><%= arena.size %></dd>
      </div>
      <div class="info-pair">
        <dt><i class="fa-solid fa-calendar"></i>Updated</dt>
        <dd><%= arena.updated %></dd>
      </div>
    </dl>
    
    <dl class="description-list">
      <dt><i class="fa-solid fa-align-center"></i> Description</dt>
      <dd>
        <% if (arena.short_description !== 'N/A') { %>
          <p><strong><%= arena.short_description %></strong></p>
        <% } %>
        
        <% if (arena.full_description !== 'N/A') { %>
          <p><%= arena.full_description %></p>
        <% } %>

        <% if (arena.short_description === 'N/A' && arena.full_description === 'N/A') { %>
          <p>No description provided.</p>
        <% } %>
      </dd>
    </dl>
  </div>

  <div class="responsive">
    <img src="/arenas/<%= arena.name %>/miniature.png?t=<%= arena.ts %>" alt="Map preview of <%= arena.name %>">
  </div>
</div>

<script>
document.onkeydown = function(e) {
  switch(e.key) {
    case "ArrowLeft":
      window.location.href = "/arenas/<%= prev %>";
      break;
    case "ArrowRight":
      window.location.href = "/arenas/<%= next %>";
      break;
    default: return;
  }
};
</script>

<%- include('overall_footer'); %>