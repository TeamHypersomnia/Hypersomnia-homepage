<%- include('../overall_header'); %>
<%- include('nav'); %>

<form class="form-inline" method="POST">
  <div class="form-group">
    <label for="shorthand">Shorthand</label>
    <input type="text" id="shorthand" name="shorthand" spellcheck="false">
  </div>
  <div class="form-group">
    <input type="submit" value="Add">
  </div>
</form>

<div class="table-responsive">
  <table class="sortable">
    <thead>
      <tr>
        <th width="20%">Shorthand</th>
        <th width="20%">Allow creating new</th>
        <th width="20%">Arenas</th>
        <th width="40%">API Key</th>
      </tr>
    </thead>
    <tbody>
      <% Object.keys(creators).forEach((k) => { %>
      <% const v = creators[k]; %>
        <tr>
          <td><a href="/admin/creators/<%= v.shorthand %>"><%= v.shorthand %></a></td>
          <td><%= v.allow_creating_new ? 'Yes' : 'No' %></td>
          <td><%= v.maps.length %></td>
          <td><span class="tocopy"><code><%= k %></code><button class="copy"><i class="fa-solid fa-copy"></i></button></span></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../overall_footer'); %>
