<% 
const d = "An online shooter with ridiculously fast dynamics. Challenge your friend to an intense duel, or gather two clans to fight a spectacular war.";
const description = typeof arena !== 'undefined' && arena ? arena.short_description.replace(/\n/g, ' ') : d;
const pageTitle = page || 'Free Multiplayer Top-Down Shooter';
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="<%= description %>">
  <meta name="keywords" content="hypersomnia, hypersomnia shooter, teamhypersomnia, open source shooter, free shooter, free 2d shooter, 2d topdown, pixel art, competitive shooter, online shooter, indie shooter, top-down shooter">
  <% if (typeof arena !== 'undefined') { %>
  <meta property="og:title" content="<%= pageTitle %> - Hypersomnia">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:image" content="https://hypersomnia.xyz/arenas/<%= arena.name %>/miniature.png">
  <meta property="og:url" content="https://hypersomnia.xyz/arenas/<%= arena.name %>">
  <% } %>
  <title><%= pageTitle %> - Hypersomnia</title>
  <link rel="icon" type="image/x-icon" href="<%= CDN %>/favicon.ico">
  <link rel="stylesheet" href="<%= NODE_ENV === 'production' ? CDN + '/assets/styles/main.min.css?' + version : '/assets/styles/main.css?' + version %>">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/inter-ui/4.1.0/inter.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <div class="container mininav">
    <a href="https://github.com/TeamHypersomnia/Hypersomnia" target="_blank">
      <i class="fa-brands fa-github"></i>Free and Open-Source Software
    </a>
    <% if (!user) { %>
      <a href="/auth/steam">
        <i class="fa-brands fa-steam"></i>Sign in through Steam Account
      </a>
    <% } else { %>
      <a href="/profile">
        <i class="fa-brands fa-steam"></i>You are signed in as <%= user.displayName %>
      </a>
    <% } %>
  </div>
  <div class="logo-center">
    <a href="/">
      <img height="104" class="responsive" src="<%= CDN %>/assets/images/menu_game_logo.png" alt="Hypersomnia Logo">
    </a>
  </div>
  <nav>
    <div class="container flex">
      <a href="/" <% if(page == false){ %> class="active"<% } %>>
        <i class="fa-solid fa-download"></i><span>Download</span>
      </a>
      <a href="/weapons" <% if(page == 'Weapons'){ %> class="active"<% } %>>
        <i class="fa-solid fa-gun"></i><span>Weapons</span>
      </a>
      <a href="/leaderboards/bomb-defusal" <% if(page == 'Leaderboards'){ %> class="active"<% } %>>
        <i class="fa-solid fa-ranking-star"></i><span>Leaderboards</span>
      </a>
      <a href="/matches" <% if(page == 'Matches'){ %> class="active"<% } %>>
        <i class="fa-solid fa-table"></i><span>Matches</span>
      </a>
      <a href="/arenas" <% if(page == 'Arenas'){ %> class="active"<% } %>>
        <i class="fa-solid fa-map"></i><span>Arenas</span>
      </a>
      <a href="/servers" <% if(page == 'Servers'){ %> class="active"<% } %>>
        <i class="fa-solid fa-server"></i><span>Servers</span>
      </a>
    </div>
  </nav>
