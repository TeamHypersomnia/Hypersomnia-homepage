<% 
const defaultDesc = "Hypersomnia is a free-to-play competitive 2D top-down shooter with intense gunplay, tactical gameplay, and stunning pixel art. Join fast-paced bomb defusal matches, clan wars, and duels in this open-source multiplayer game.";
const description = typeof arena !== 'undefined' && arena ? arena.short_description.replace(/\n/g, ' ') : defaultDesc;
const pageTitle = page || 'Free Multiplayer Top-Down Shooter';
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="<%= description %>">
  <meta name="keywords" content="hypersomnia, hypersomnia shooter, teamhypersomnia, open source shooter, free shooter, free 2d shooter, 2d topdown, pixel art, competitive shooter, online shooter, indie shooter, top-down shooter, bomb defusal, tactical shooter, clan wars">
  
  <!-- Open Graph tags for ALL pages -->
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Hypersomnia">
  <meta property="og:title" content="<%= pageTitle %> - Hypersomnia">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:url" content="https://hypersomnia.io<%= typeof arena !== 'undefined' ? '/arenas/' + arena.name : '' %>">
  <meta property="og:image" content="<%= typeof arena !== 'undefined' ? 'https://hypersomnia.io/arenas/' + arena.name + '/miniature.png' : 'https://hypersomnia.io/assets/images/og-default.png' %>">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= pageTitle %> - Hypersomnia">
  <meta name="twitter:description" content="<%= description %>">
  <meta name="twitter:image" content="<%= typeof arena !== 'undefined' ? 'https://hypersomnia.io/arenas/' + arena.name + '/miniature.png' : 'https://hypersomnia.io/assets/images/og-default.png' %>">
  
  <title><%= pageTitle %> - Hypersomnia</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="<%= asset('assets/styles/main.css') %>">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.7.2/css/all.min.css">
</head>
<body>
  <div class="container mininav">
    <a href="https://github.com/TeamHypersomnia/Hypersomnia" target="_blank" rel="noopener">
      <i class="fa-brands fa-github"></i>Free and Open-Source Software
    </a>
    <% if (!user) { %>
      <a href="/auth/steam">
        <i class="fa-brands fa-steam"></i>Sign in through Steam Account
      </a>
    <% } else { %>
      <a href="/profile">
        <i class="fa-brands fa-steam"></i>You are signed in as <%= user.displayName %>
      </a>
    <% } %>
  </div>
  <div class="logo-center">
    <a href="/">
      <img height="104" width="auto" class="responsive" src="/assets/images/menu_game_logo.png" alt="Hypersomnia - Free 2D Top-Down Shooter Game">
    </a>
  </div>
  <nav>
    <div class="container flex">
      <a href="/" <% if(page == false){ %> class="active"<% } %>>
        <i class="fa-solid fa-download"></i><span>Download</span>
      </a>
      <a href="/weapons" <% if(page == 'Weapons'){ %> class="active"<% } %>>
        <i class="fa-solid fa-gun"></i><span>Weapons</span>
      </a>
      <a href="/leaderboards/bomb-defusal" <% if(page == 'Leaderboards'){ %> class="active"<% } %>>
        <i class="fa-solid fa-ranking-star"></i><span>Leaderboards</span>
      </a>
      <a href="/matches" <% if(page == 'Matches'){ %> class="active"<% } %>>
        <i class="fa-solid fa-table"></i><span>Matches</span>
      </a>
      <a href="/arenas" <% if(page == 'Arenas'){ %> class="active"<% } %>>
        <i class="fa-solid fa-map"></i><span>Arenas</span>
      </a>
      <a href="/servers" <% if(page == 'Servers'){ %> class="active"<% } %>>
        <i class="fa-solid fa-server"></i><span>Servers</span>
      </a>
    </div>
  </nav>
